<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.viewholder.CarSelectViewHolder" />
        <variable
            name="carModel"
            type="xyz.ttyz.tourfrxohc.models.CarModel" />
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:foreground="?selectableItemBackground"
        binding:onClickCommand="@{context.onClickItem}"
        android:background="@drawable/shape_alpha_white_conor">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            binding:onClickCommand="@{context.onClickItem}"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:ignore="EllipsizeMaxLines"
                tools:text="LSVNY4BR8HN255136"
                android:text="@{carModel.carUnique}"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:ellipsize="middle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                tools:ignore="EllipsizeMaxLines"
                tools:text="大众 桑塔纳 1.6L "
                android:text="@{carModel.carModel}"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:ellipsize="middle"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                binding:visible="@{!context.showSelect}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF852C"
                    android:textSize="15sp"
                    android:text='@{"柜号 " + carModel.doorNumber}'
                    tools:text="柜号 23" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <include
                    layout="@layout/layout_error_report_btn"
                    binding:viewModel="@{context.reportModel}" />
                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <include
                    layout="@layout/layout_retry_btn"
                    binding:viewModel="@{context.retryModel}" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <ImageView
            binding:visible="@{context.showSelect}"
            android:layout_width="17dp"
            android:layout_height="17dp"
            binding:onClickCommand="@{context.onClickItem}"
            binding:isSelect="@{carModel.select}"
            android:src="@drawable/selectpeat"/>


        <ImageView
            binding:visible="@{!context.showSelect}"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@mipmap/door"
            binding:srcRes='@{carModel.open ? context.doorOpen : context.doorClose}'/>

    </LinearLayout>
</layout>
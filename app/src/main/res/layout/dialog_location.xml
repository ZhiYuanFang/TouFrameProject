<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.dialog.LocationDialog" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="5dp"
                binding:onClickCommand="@{context.cancelClick}"
                android:layout_marginLeft="5dp"
                android:text="取消"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="5dp"
                binding:onClickCommand="@{context.confirmClick}"
                android:layout_marginRight="5dp"
                android:text="确定"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">

            <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/wheel_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:wheelItemSelected="@{context.firstSelect}"
                binding:wheelData="@{context.firstList}"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_curved="false"
                aigestudio:wheel_cyclic="false"
                aigestudio:wheel_item_align="center"
                aigestudio:wheel_item_text_color="#A7A7DB"
                aigestudio:wheel_item_text_size="24sp"
                aigestudio:wheel_selected_item_text_color="#536D8A"
                android:layout_weight="1"/>

            <com.aigestudio.wheelpicker.WheelPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:wheelItemSelected="@{context.secondSelect}"
                binding:wheelData="@{context.secondList}"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_curved="false"
                aigestudio:wheel_cyclic="false"
                aigestudio:wheel_item_align="left"
                aigestudio:wheel_item_text_color="#A7A7DB"
                aigestudio:wheel_item_text_size="24sp"
                aigestudio:wheel_selected_item_text_color="#536D8A"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</layout>
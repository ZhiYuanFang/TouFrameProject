<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.activity.ComingActivity" />
        <variable
            name="toolBarViewModel"
            type="xyz.ttyz.toubasemvvm.vm.ToolBarViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/layout_toolbar"
            binding:toolBarViewModel="@{toolBarViewModel}" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ECECEC"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="@={context.inputCodeFiled}"
            android:hint="输入货品码查询" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/recycler_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:tabMaxWidth="0dp"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorColor="#4B8EFF"
                app:tabSelectedTextColor="#333333"
                app:tabTextColor="#CCCCCC"
                app:tabTextAppearance="@style/MyTabLayoutText"
                app:tabGravity="fill"
                app:tabMode="fixed"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            binding:visible="@{context.type == context.Type_in}"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/black"
            android:text="扫一扫开始入库"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:foreground="?selectableItemBackground"
            binding:onClickCommand="@{context.clickScan}"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="45dp"/>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.activity.ComingActivity" />
        <variable
            name="toolBarViewModel"
            type="xyz.ttyz.toubasemvvm.vm.ToolBarViewModel" />
        <import type="xyz.ttyz.tourfrxohc.utils.Constans"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/layout_toolbar"
                binding:toolBarViewModel="@{toolBarViewModel}" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ECECEC"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                binding:animVisible="@{context.searchShowFiled}"
                binding:editDelegate="@{context.editSearch}"
                android:text="@={context.inputCodeFiled}"
                android:hint="输入货品码查询" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/recycler_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    app:tabMaxWidth="0dp"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorColor="#000000"
                    app:tabSelectedTextColor="#333333"
                    app:tabTextColor="#CCCCCC"
                    app:tabTextAppearance="@style/MyTabLayoutText"
                    app:tabGravity="fill"
                    app:tabMode="fixed"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            binding:visible="@{context.type == Constans.NowIn}"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/shape_btn_conor"
            android:text="开始入库"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:foreground="?selectableItemBackground"
            binding:onClickCommand="@{context.clickScan}"/>
    </RelativeLayout>
</layout>
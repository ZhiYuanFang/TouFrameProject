<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.activity.AccountInfoActivity" />
        <variable
            name="toolBarViewModel"
            type="xyz.ttyz.toubasemvvm.vm.ToolBarViewModel"/>
        <variable
            name="userModel"
            type="xyz.ttyz.tourfrxohc.models.UserModel" />
        <import type="xyz.ttyz.tourfrxohc.DefaultUtils"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            layout="@layout/layout_toolbar"
            binding:toolBarViewModel="@{toolBarViewModel}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="账号："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name"
                android:text="@{userModel.user_name}"
                android:textColor="@color/colorPrimary"
                android:textSize="35sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="门号："/>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <TextView
                    tools:visibility="gone"
                    binding:visible="@{!context.isEditDoorFiled}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1001"
                    android:text="@={context.doorIDFiled}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp"/>

                <EditText
                    binding:visible="@{context.isEditDoorFiled}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1001"
                    android:text="@={context.doorIDFiled}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/bg_conor_btn"
                android:foreground="?selectableItemBackground"
                tools:text="修改"
                android:text="@{context.isEditDoorFiled ? @string/save : @string/xiugai}"
                android:textColor="@color/white"
                android:textSize="12sp"
                binding:onClickCommand="@{context.dealDoor}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="服务IP："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="http://47.111.185.38:8001/"
                android:text="@{DefaultUtils.getIp}"
                android:textStyle="italic"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_conor_btn"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:text="退出登陆"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            binding:onClickCommand="@{context.reLoginClick}"
            android:layout_margin="35dp"/>
    </LinearLayout>
</layout>
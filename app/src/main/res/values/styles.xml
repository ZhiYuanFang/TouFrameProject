<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bac</item>
    </style>

    <style name="TableTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TableTxt">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:width">180dp</item>
    </style>
    <style name="LoginLayout">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="LoginTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:height">35dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="LoginEdit">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
